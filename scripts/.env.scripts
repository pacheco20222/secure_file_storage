# .env.scripts

# Database credentials
MYSQL_HOST=127.0.0.1  # If you're running the app locally, not using Docker, or 'db' if you are using Docker
MYSQL_USER=bentheblaster
MYSQL_PASSWORD=Pajarito1234
MYSQL_DB=secure_storage

# Backup paths
BACKUP_DIR=../backups  # The backup directory relative to the root
UPLOADS_DIR=../uploads  # Your app's uploads directory

# Files for backup (using dynamic naming for each backup)
DB_BACKUP_FILE=$BACKUP_DIR/secure_storage_$(date +%F).sql
UPLOADS_BACKUP_FILE=$BACKUP_DIR/uploads_backup_$(date +%F).tar.gz

# Files for restoration (dynamically choose the latest backup file)
DB_RESTORE_FILE=$(ls -t $BACKUP_DIR/secure_storage_*.sql | head -n 1)  # Picks the most recent SQL backup
UPLOADS_RESTORE_FILE=$(ls -t $BACKUP_DIR/uploads_backup_*.tar.gz | head -n 1)  # Picks the most recent uploads backup

